SOURCE_DIR = 

TARGET_ARCH=x64Win64VS2017

# If undefined in the environment default NDDSHOME to install dir
ifndef NDDSHOME
NDDSHOME := C:\Program Files\rti_connext_dds-6.1.0\bin\..
endif

ifndef DEBUG
DEBUG=0 
endif
ifeq ($(DEBUG),1)
DEBUG_FLAGS += -g
else
DEBUG_FLAGS = 
endif

JAVA_PATH = java
JAVAC_PATH = javac

JAVA_SOURCES = $(SOURCE_DIR)./ddsgen.HostSimple.java $(SOURCE_DIR)./ddsgen.HostSimpleSeq.java $(SOURCE_DIR)./ddsgen.HostSimpleTypeSupport.java $(SOURCE_DIR)./ddsgen.HostSimpleTypeCode.java $(SOURCE_DIR)./ddsgen.HostSimpleDataReader.java $(SOURCE_DIR)./ddsgen.HostSimpleDataWriter.java $(SOURCE_DIR)./ddsgen.Application.java $(SOURCE_DIR)./ddsgen.HostSimpleSubscriber.java $(SOURCE_DIR)./ddsgen.HostSimplePublisher.java
CLASS_FILES  = $(JAVA_SOURCES:%.java=%.class)

RTI_CLASSPATH := $(NDDSHOME)/lib/java/nddsjava.jar

%.class : %.java
	$(JAVAC_PATH) $(DEBUG_FLAGS) -classpath ".;$(RTI_CLASSPATH)" $<

all: $(CLASS_FILES)
 
#
# Convenient way to run the java programs
#

export Path := $(NDDSHOME)/lib/x64Win64VS2017;$(Path)

ddsgen.HostSimplePublisher: ./ddsgen.HostSimplePublisher.class
	$(JAVA_PATH)  $(RTI_JAVA_OPTION) -classpath ".;$(RTI_CLASSPATH)" ddsgen.HostSimplePublisher $(ARGS)
 
ddsgen.HostSimpleSubscriber: ./ddsgen.HostSimpleSubscriber.class
	$(JAVA_PATH)  $(RTI_JAVA_OPTION) -classpath ".;$(RTI_CLASSPATH)" ddsgen.HostSimpleSubscriber $(ARGS)
